<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <plug>
            <general>
                <sandbox_url>https://sandbox-api.plugpagamentos.com</sandbox_url>
                <production_url>https://api.plugpagamentos.com</production_url>
            </general>
            <global>
                <webhook_key/>
                <webhook_key_test/>
            </global>
        </plug>
        <payment>
            <plug_billet>
                <active>0</active>
                <model>PlugBilletRemoteMethodAdapter</model>
                <order_status>pending_payment</order_status>
                <payment_action>authorize</payment_action>
                <title>Plug Billet</title>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>1</can_use_internal>
                <is_gateway>1</is_gateway>
                <sort_order>1</sort_order>
                <can_initialize>1</can_initialize>
                <expiration_days>5</expiration_days>
            </plug_billet>
            <plug_pix>
                <active>0</active>
                <model>PlugPixRemoteMethodAdapter</model>
                <order_status>pending_payment</order_status>
                <payment_action>authorize</payment_action>
                <title>Plug Pix</title>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>1</can_use_internal>
                <is_gateway>1</is_gateway>
                <sort_order>1</sort_order>
                <can_initialize>1</can_initialize>
                <expiration_days>5</expiration_days>
            </plug_pix>
            <plug_creditcard>
                <active>0</active>
                <model>PlugCreditCardsRemoteMethodAdapter</model>
                <order_status>pending_payment</order_status>
                <payment_action>authorize_capture</payment_action>
                <title>Plug Credit Card</title>
                <can_authorize>1</can_authorize>
                <can_capture_partial>1</can_capture_partial>
                <can_capture>1</can_capture>
                <can_refund>1</can_refund>
                <can_refund_partial_per_invoice>1</can_refund_partial_per_invoice>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>1</can_use_internal>
                <cctypes>NoBrand</cctypes>
                <is_gateway>1</is_gateway>
                <sort_order>1</sort_order>
                <installments_active>0</installments_active>
                <installments_interest_by_issuer>0</installments_interest_by_issuer>
                <installments_number>12</installments_number>
                <installments_is_with_interest>1</installments_is_with_interest>
                <installment_min_amount>10.00</installment_min_amount>
                <installments_interest_rate>10</installments_interest_rate>
                <installments_max_without_interest>6</installments_max_without_interest>
                <can_initialize>1</can_initialize>
                <allow_multiple_address>0</allow_multiple_address>
            </plug_creditcard>
        </payment>
    </default>
</config>
