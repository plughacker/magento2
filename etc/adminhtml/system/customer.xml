        </field>
        <field id="customer_address_complement_field" translate="label" type="obscure" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Street address complement field name</label>
            <config_path>payment/malga/customer_address_complement_field</config_path>
        </field>
        <field id="customer_address_district_field" translate="label" type="obscure" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Street address district field name</label>
            <config_path>payment/malga/customer_address_complement_field</config_path>
        </field>
    </group>
</include>
