<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="pix" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>PIX settings</label>
        <depends>
            <field id="sandbox_mode">0</field>
        </depends>
        <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Enabled</label>
            <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
            <config_path>payment/malga_pix/active</config_path>
            <requires>
                <group id="general"/>
            </requires>
        </field>
        <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Title</label>
            <config_path>payment/malga_pix/title</config_path>
        </field>
        <field id="qrcode_expiration" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>QR Code expiration time</label>
            <comment><![CDATA[In seconds]]></comment>
            <frontend_class>validate-number</frontend_class>
            <config_path>payment/malga_pix/qrcode_expiration</config_path>
        </field>
        <field id="allowspecific" translate="label" type="allowspecific" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Payment From Applicable Countries</label>
            <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
            <config_path>payment/malga_pix/allowspecific</config_path>

        </field>
        <field id="specificcountry" translate="label" type="multiselect" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Payment From Specific Countries</label>
            <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
            <config_path>payment/malga_pix/specificcountry</config_path>
        </field>
        <field id="sort_order" translate="label comment" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Sort Order</label>
            <comment><![CDATA[Payment method order position on checkout/system configuration pages]]></comment>
            <frontend_class>validate-number</frontend_class>
            <config_path>payment/malga_pix/sort_order</config_path>
        </field>
    </group>
</include>
